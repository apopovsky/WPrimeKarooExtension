<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wprimeContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="#FF000000">

    <!-- Field label with battery icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="2dp">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_wprime_battery"
            android:layout_marginEnd="6dp"
            android:contentDescription="Battery icon" />

        <TextView
            android:id="@+id/wprimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="W PRIME"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeMaxTextSize="18sp"
            android:maxLines="1"
            android:includeFontPadding="false" />
    </LinearLayout>

    <!-- Main value display -->
    <TextView
        android:id="@+id/wprimeValue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="100"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeMaxTextSize="200sp"
        android:maxLines="1"
        android:includeFontPadding="false"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp" />

    <!-- Unit display (%, kJ, etc.) - will be hidden when unit is in label -->

</LinearLayout>
